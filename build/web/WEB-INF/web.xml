<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>appointment</servlet-name>
        <servlet-class>com.NHHospital.servlet.appointment</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>valid</servlet-name>
        <servlet-class>com.NHHospital.servlet.valid</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.NHHospital.servlet.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>appointment</servlet-name>
        <url-pattern>/appointment</url-pattern>
    </servlet-mapping>
    <filter>
        <filter-name>Auth</filter-name>
        <filter-class>com.NHHospital.filter.LoginAuthFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name> Auth</filter-name>
        <url-pattern>/appointment.jsp</url-pattern>
    </filter-mapping>
    <servlet-mapping>
        <servlet-name>valid</servlet-name>
        <url-pattern>/valid</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/LogoutServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
